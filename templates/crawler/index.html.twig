{% extends 'base.html.twig' %}

{% block title %}Crawler List{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Crawler List</h1>

        <div class="table-responsive">
        <table id="crawlerTable" class="table table-striped table-hover align-middle w-100">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Source</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for crawler in crawlers %}
                <tr>
                    <td>{{ crawler.id }}</td>
                    <td>{{ crawler.name }}</td>
                    <td>{{ crawler.type }}</td>
                    <td>{{ crawler.source }}</td>
                    <td>
                        <a href="{{ path('app_crawler_show', {'id': crawler.id}) }}" class="btn btn-sm btn-outline-secondary">Show</a>
                        <a href="{{ path('app_crawler_edit', {'id': crawler.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                        {{ include('crawler/_delete_form.html.twig', { crawler:crawler }) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-center">No crawlers found</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

        <div class="text-end">
            <a href="{{ path('app_crawler_new') }}" class="btn btn-primary">Create New Crawler</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/crawler-index.js') }}"></script>
{% endblock %}
