{% extends 'base.html.twig' %}

{% block title %}Crawler List{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="center-align">Crawler List</h1>

        <div class="table-responsive">
        <table id="crawlerTable" class="striped highlight responsive-table table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Source</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for crawler in crawlers %}
                <tr>
                    <td>{{ crawler.id }}</td>
                    <td>{{ crawler.name }}</td>
                    <td>{{ crawler.type }}</td>
                    <td>{{ crawler.source }}</td>
                    <td>
                        <a href="{{ path('app_crawler_show', {'id': crawler.id}) }}" class="waves-effect waves-light btn-small">Show</a>
                        <a href="{{ path('app_crawler_edit', {'id': crawler.id}) }}" class="waves-effect waves-light btn-small orange">Edit</a>
                        {{ include('crawler/_delete_form.html.twig', { crawler:crawler }) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="center-align">No crawlers found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

        <div class="right-align">
            <a href="{{ path('app_crawler_new') }}" class="waves-effect waves-light btn">Create New Crawler</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/crawler-index.js') }}"></script>
{% endblock %}
