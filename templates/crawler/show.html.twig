{% extends 'base.html.twig' %}

{% block title %}Crawler Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Crawler Details</h1>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">{{ crawler.name }}</h2>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th class="bg-light">Id</th>
                        <td>{{ crawler.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Name</th>
                        <td>{{ crawler.name }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Company ID</th>
                        <td>{{ crawler.companyId.id }}</td>
                    </tr>
                    <!-- Add other fields as necessary -->
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-center">
                <a href="{{ path('app_crawler_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_crawler_edit', {'id': crawler.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('crawler/_delete_form.html.twig') }}
                <button id="run-crawler-btn" class="btn btn-success mt-2">Run Crawler</button>
            </div>
        </div>

        <div id="output-container" class="mt-4 d-none">
            <h4>Command Output:</h4>
            <pre id="command-output" class="p-3 bg-dark text-white rounded"></pre>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('run-crawler-btn').addEventListener('click', function () {
            const outputContainer = document.getElementById('output-container');
            const commandOutput = document.getElementById('command-output');

            outputContainer.classList.remove('d-none'); // Show output container
            commandOutput.textContent = 'Running command...'; // Placeholder text

            fetch('{{ path('app_crawler_run', {'id': crawler.id}) }}', {
                method: 'POST',
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        commandOutput.textContent = data.output;
                    } else {
                        commandOutput.textContent = 'Error: ' + data.error;
                    }
                })
                .catch(error => {
                    commandOutput.textContent = 'An error occurred: ' + error.message;
                });
        });

    </script>
{% endblock %}
