{% extends 'base.html.twig' %}

{% block title %}Setup Two-Factor Authentication{% endblock %}

{% block body %}
    <div class="container">
        <h1>Setup Two-Factor Authentication</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <p>Scan this QR code with your authenticator app, then enter the generated code to confirm.</p>
        <img src="{{ qrCode }}" alt="QR Code">
        <p class="mt-3">Secret: <strong>{{ secret }}</strong></p>
        <form method="post">
            <div class="mb-3">
                <label for="code" class="form-label">Verification Code</label>
                <input type="text" name="code" id="code" class="form-control" required>
            </div>
            <button class="btn btn-primary">Enable 2FA</button>
        </form>
        <a href="{{ path('app_user_index') }}" class="btn btn-link mt-3">Back to list</a>
    </div>
{% endblock %}
