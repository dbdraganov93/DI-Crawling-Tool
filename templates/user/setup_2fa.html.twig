
{% extends 'base.html.twig' %}

{% block title %}Setup Two-Factor Authentication{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <h1 class="text-center mb-4">Setup Two-Factor Authentication</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <div class="apple-card text-center mb-3">
            <p>Scan this QR code with your authenticator app</p>
            <img src="{{ qrCode }}" alt="QR Code" class="img-fluid">
            <p class="mt-3">Secret: <strong>{{ secret }}</strong></p>
            <form method="post" class="mt-3">
                <div>
                    <label for="code" class="form-label">Verification Code</label>
                    <input type="text" name="code" id="code" class="form-control" required>
                </div>
                <button class="btn btn-primary w-100 mt-3">Enable 2FA</button>
            </form>
        </div>
        <a href="{{ path('app_user_index') }}" class="btn btn-link">Back to list</a>
    </div>
</div>
{% endblock %}
