{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="center-align">User Management</h1>
        <div class="left-align">
            <a href="{{ path('app_user_new') }}" class="waves-effect waves-light btn">Create New User</a>
        </div><br>
        <table id="userTable" class="striped highlight responsive-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                Admin
                            {% elseif role == 'ROLE_USER' %}
                                User
                            {% else %}
                                {{ role }} {# Fallback if any other roles exist #}
                            {% endif %}
                            {% if not loop.last %}, {% endif %}
                        {% else %}
                            No roles assigned
                        {% endfor %}
                    </td>

                    <td>
                        <a class="waves-effect waves-light btn-small" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                        <a class="waves-effect waves-light btn-small orange" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                        <a class="btn red">{{ include('user/_delete_form.html.twig', {'id': user.id}) }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="center-align">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#userTable').DataTable({
                "pagingType": "full_numbers",
                "responsive": true
            });
        });
    </script>
{% endblock %}
