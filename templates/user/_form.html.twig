    {{ form_row(form.email) }}
    {{ form_row(form.roles) }}
    {% if form.password is defined %}
        {{ form_row(form.password) }}
    {% endif %}

    <button class="btn btn-primary w-100 mt-3" type="submit">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
