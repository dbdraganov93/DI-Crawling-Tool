{% extends 'base.html.twig' %}

{% block title %}Change Password{% if user is defined %} of {{ user.email }}{% endif %}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        {% if user is defined %}
            <h1 class="text-center mb-4">Change password of {{ user.email }}</h1>
        {% else %}
            <h1 class="text-center mb-4">Change Password</h1>
        {% endif %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {{ form_start(form, {'attr': {'class': 'apple-card'}}) }}
            {{ form_row(form.newPassword.first) }}
            {{ form_row(form.newPassword.second) }}
            <button class="btn btn-primary w-100 mt-3">Change Password</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
