{% extends 'base.html.twig' %}

{% block title %}Companies{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Companies</h1>

    <div class="mb-3">
        <label for="ownerSelect" class="form-label">Owner</label>
        <select id="ownerSelect" class="form-control">
            <option value="">Select an owner</option>
            {% for o in owners %}
                <option value="{{ o.id }}">{{ o.title }} (ID: {{ o.id }})</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="showDeleted">
        <label class="form-check-label" for="showDeleted">Show deleted companies</label>
    </div>

    <div class="table-responsive">
        <table id="companyTable" class="table table-striped table-hover align-middle w-100">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="{{ asset('js/company-index.js') }}"></script>
{% endblock %}
