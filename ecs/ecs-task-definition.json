{
"family": "dicrawler-di-${env}",
    "taskRoleArn": "arn:aws:iam::385750204895:role/dicrawler.ecs-task.di-${env}",
    "executionRoleArn": "arn:aws:iam::385750204895:role/dicrawler.ecs-task.di-${env}",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "DiCrawlerApi",
            "image": "${dicrawler_image}",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [],
            "command":   [],
            "environment": [
                {
                    "name": "APP_ENV",
                    "value": "${env}"
                },
                {
                    "name": "WEBSERVER",
                    "value": "true"
                }
            ],
            "secrets": [                  
                {
                    "name": "DATABASE_URL",
                    "valueFrom": "arn:aws:ssm:eu-west-1:385750204895:parameter/di/dicrawler/prod/database_url"
                }
      
          ],
            "readonlyRootFilesystem": false,
            "interactive": true,
            "pseudoTerminal": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "dicrawler.ecs.di-${env}",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost || exit 1"
                ],
                "interval": 10,
                "timeout": 10,
                "retries": 5,
                "startPeriod": 5
            }
        }
    ],
    "volumes": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "2048",
    "memory": "4096",
    "tags": [
        {
            "key": "Service",
            "value": "dicrawler"
        }
    ]
}
